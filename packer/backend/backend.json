{
  "variables": {
    "aws_region": "ap-south-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-0533167fcff018a86",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "three-tier-backend-al2023-{{timestamp}}",
      "ami_description": "Custom backend AMI with node git  on Amazon Linux 2023",
      "tags": {
        "Project": "three-tier",
        "Tier": "backend",
        "Base_AMI": "amazon-linux-2023-kernel-6.1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e",
        "echo 'ðŸ“¦ Updating system and installing required packages...'",
        "sudo dnf update -y",
        "sudo dnf install -y git ",
        "sudo wget https://dev.mysql.com/get/mysql80-community-release-el9-1.noarch.rpm",
        "sudo dnf install mysql80-community-release-el9-1.noarch.rpm -y",
        "sudo rpm --import https://repo.mysql.com/RPM-GPG-KEY-mysql-2023",
        "sudo dnf install -y mysql-community-client",
        "echo 'ðŸ“¦ Installing NVM (Node Version Manager)'",
  "curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.3/install.sh | bash",

  "export NVM_DIR=\"$HOME/.nvm\"",
  "[ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\"",

  "echo 'ðŸ“¦ Installing Node.js v22 via NVM'",
  "nvm install 22",
  "npm install -g pm2"
      ]
    }
  ]
}